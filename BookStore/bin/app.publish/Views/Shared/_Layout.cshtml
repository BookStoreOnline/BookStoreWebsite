<!DOCTYPE HTML>
<head>
    <title>Trang chủ</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/Content/client/css/bootstrap.css" rel="stylesheet" />
    <link href="/Content/client/css/boostrap-social.css" rel="stylesheet" />
    <link href="/Content/client/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="/Content/client/css/fontawesome.min.css" rel="stylesheet" />
    <link href="/Content//client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Content//client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Content/client/css/jquery-ui.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Content//client/js/jquery-3.6.2.min.js"></script>
    <script src="/Content/client/js/jquery-ui.js"></script>
    <script src="/Content/client/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Content//client/js/move-top.js"></script>
    <script type="text/javascript" src="/Content//client/js/easing.js"></script>
    <script type="text/javascript" src="/Content//client/js/startstop-slider.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                <div class="call">
                    <p><span>Liên hệ?</span> Gọi chúng tôi <span class="number">0354403117</span></span></p>
                </div>
                <div class="account_desc">
                    @{
                        var session = (BookStore.Common.UserLogin)Session[BookStore.Common.CommonConstants.USER_SESSION];

                    }
                    @if (session == null)
                    {

                        <ul>
                            <li><a href="/dang-ky">Đăng ký</a></li>
                            <li><a href="/dang-nhap">Đăng nhập   </a></li>
                        </ul>
                    }
                    else
                    {
                        <ul>
                            <li>Xin chào: @session.UserName</li>
                            <li>@Html.ActionLink("Đăng xuất", "Logout", "User")</li>
                        </ul>
                    }
                </div>
                <div class="clear"></div>
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="/" rel="nofollow"><img src="~/Content/client/images/logo.png" alt="" /></a>
                </div>
                @{ Html.RenderAction("HeaderCart", "Home");}
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });</script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                <div class="menu">
                    <ul>
                        <li class="active"><a href="/">Trang chủ</a></li>
                        <li><a href="/san-pham">Sản phẩm</a></li>
                        <li><a href="/">Danh mục sản phẩm</a></li>
                        <div class="clear"></div>
                    </ul>
                </div>
                <div class="search_box">
                    <form action="/tim-kiem" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Gõ từ khoá"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide", false)
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="wrap">
            <div class="section group">
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Thông tin</h4>
                    <ul>
                        <li><a href="#">Về chúng tôi</a></li>
                        <li><a href="#">Dịch vụ khách hàng</a></li>
                        <li><a href="#">Tìm kiếm nâng cao</a></li>
                        <li><a href="#">Liên hệ chúng tôi</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Tại sao mua sách từ chúng tôi</h4>
                    <ul>
                        <li><a href="#">Về chúng tôi</a></li>
                        <li><a href="#">Chính sách giao hàng</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                        <li><a href="#">Điều khoản</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Tài khoản</h4>
                    <ul>
                        <li><a href="/dang-nhap">Đăng nhập</a></li>
                        <li><a href="/gio-hang">Xem giỏ hàng</a></li>
                    </ul>
                </div>
                <div class="col_1_of_4 span_1_of_4">
                    <h4>Contact</h4>
                    <ul>
                        <li><span>0354403117</span></li>
                    </ul>
                    <div class="social-icons">
                        <h4>Follow Us</h4>
                        <ul>
                            <li><a href="https://www.facebook.com/LeNguyenDucTam" target="_blank"><img src="~/Content//client/images/facebook.png" alt="" /></a></li>
                            <div class="clear"></div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });</script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
    @RenderSection("jsFooter", false)
</body>
</html>